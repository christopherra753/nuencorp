---
interface Props {
	title: string;
}

const { title } = Astro.props;

// Supports weights 100-900
import '@fontsource-variable/montserrat';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Empresa de Transporte Logistico" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/jpg" href="/favicon2.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative">
		<slot />
	</body>
</html>
<style is:global>
	html {
		scroll-behavior: smooth;
	}
	body {
		font-family: 'Montserrat Variable', sans-serif;
	}
</style>
